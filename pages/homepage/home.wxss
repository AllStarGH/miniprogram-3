.support_view {
  text-align: center;
  margin: 39rpx auto 49rpx auto;
}

.support_view text {
  color: #797676;
  font-family: monospace;
  font-size: 30rpx;
}

/* ------------------- */

/* Above is first area */

.title-info {
  width: 600rpx;
  border-style: none solid solid solid;
  margin: auto auto auto 9%;
  border-color: #8ac007;
  font-size: 26rpx;
  transform: translateY(32rpx);
}

.view-info {
  text-align: center;
  margin-top: 0rpx;
}

.img-view-00 {
  text-align: center;
  /* margin-top: 30rpx; *//* transform: translateY(30rpx); */
}

.img-view-00 image {
  margin: auto 1rpx;
}

.img-0 {
  width: 99%;
  height: 380rpx;
}

/* ------------------- */

.long-key-call {
  transform: translateY(-14rpx);
}

.view-btn-0 button {
  background: #3385ff;
  color: white;
  border-radius: 25rpx;
  border: 2rpx solid #f6f8f3;
  height: 80rpx;
  width: 549rpx;
  font-family: monospace;
}

.view-btn-0 {
  text-align: center;
  margin: 13px auto auto auto;
}

/* ------------------- */

.whole-top {
  background: #eae8ec;
  height: 380rpx;
}

swiper {
  height: 380rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 380rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

/* ------------------- */

.v_potent {
  min-height: 60rpx;
  overflow: hidden;
  transform: translateY(15rpx);
}

.ul {
  list-style: none;
}

.li {
  width: 18%;
  float: left;
  padding: 9rpx;
  height: 170rpx;
}

.album_icon {
  height: 120rpx;
  border-radius: 50%;
  background-color: #1a514e;
  width: 120rpx;
  text-align: center;
  margin: 0 auto;
  cursor: pointer;
}

.v_potent image {
  border: none;
  margin: 0;
  padding: 0;
  -ms-interpolation-mode: bicubic;
  margin-top: 18rpx;
  width: 80rpx;
  height: 80rpx;
}

.li text {
  margin-top: 20rpx;
  text-align: center;
  font-size: 20rpx;
  font-family: "Microsoft YaHei", "微软雅黑";
}

.albums_potent {
  /* transform: translateY(15rpx); */
  text-align: center;
  transform: translateX(11%);
  margin: 15rpx auto auto auto;
}

/* ------------------- */

._case_exhibi {
  margin: 12rpx 0 0 0;
}

.p_case_exhibi {
  font-size: 38rpx;
  font-weight: bold;
}

.title_h1 {
  text-align: center;
}

/* ----------------------- */

._line {
  display: inline-block;
}

.border_line {
  width: 200rpx;
  height: 4rpx;
  background: #b3acac;
}

.border_line_0 {
  transform: translate(-19rpx, -11rpx);
}

.border_line_1 {
  transform: translate(19rpx, -11rpx);
}

/* ------------------- */

.case_move_area {
  text-align: center;
  margin: 10rpx 0 0 0;
}

.img_case_move {
  display: inline-block;
  margin: 20rpx 20rpx;
  position: relative;
}

.case_move_area image {
  width: 310rpx;
  height: 232rpx;
  cursor: pointer;
}

.description {
  width: 100%;
  position: absolute;
  z-index: 2;
  left: 0;
  bottom: 0;
  color: white;
  font-size: 20rpx;
  background: linear-gradient(rgba(0, 0, 0, 0), rgba(82, 79, 79));
  height: 30rpx;
}

.description text {
  transform: translateY(-17rpx);
}

